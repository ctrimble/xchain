<xchain:catalog
   xmlns:servlet="http://www.xchain.org/servlet/1.0"
   xmlns:sax="http://www.xchain.org/sax/1.0"
   xmlns:xchain="http://www.xchain.org/core/1.0">

  <xchain:chain xchain:name="servlet:post">
    <sax:pipeline>
      <sax:command-source>
      	<jsl:template xmlns:jsl="http://www.xchain.org/jsl/1.0">
	        <html xmlns="http://www.w3.org/1999/xhtml">
	        	<head>
	        		<title>Test Post</title>
	        	</head>
	        	<body>
	        		<h1>This is a post test</h1>
	        		<jsl:value-of select="$servlet:request/parameterMap/oneKey"/>
	        		<jsl:value-of select="$servlet:request/parameterMap/threeKey"/>
	        	</body>
	        </html>
        </jsl:template>
      </sax:command-source>
      <servlet:result/>
    </sax:pipeline>    
  </xchain:chain>
  
  <xchain:chain xchain:name="servlet:get">
    <sax:pipeline>
      <sax:command-source>
      	<jsl:template xmlns:jsl="http://www.xchain.org/jsl/1.0">
	        <html xmlns="http://www.w3.org/1999/xhtml">
	        	<head>
	        		<title>Test Get</title>
	        	</head>
	        	<body>
	        		<h1>This is a get test</h1>
	        	</body>
	        </html>
        </jsl:template>
      </sax:command-source>
      <servlet:result/>
    </sax:pipeline>    
  </xchain:chain>
  
  <xchain:chain xchain:name="servlet:copy">
    <sax:pipeline>
      <sax:command-source>
      	<jsl:template xmlns:jsl="http://www.xchain.org/jsl/1.0">
	        <html xmlns="http://www.w3.org/1999/xhtml">
	        	<head>
	        		<title>Test Copy</title>
	        	</head>
	        	<body>
	        		<h1>This is a copy test</h1>
	        	</body>
	        </html>
        </jsl:template>
      </sax:command-source>
      <servlet:result/>
    </sax:pipeline>    
  </xchain:chain>      

</xchain:catalog>
